{
  "name": "Bet",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "odd": {
      "type": "object",
      "required": true
    },
    "value": {
      "type": "number",
      "required": true
    },
    "status": {
      "type": "boolean",
      "required": true
    },
    "winAmount": {
      "type": "number",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "accounts": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "userId"
    },
    "games": {
      "type": "belongsTo",
      "model": "Game",
      "foreignKey": "gameId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
